{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@my-todos/shared-types": ["libs/shared-types/src/index.ts"],
      "@my-todos/shared-ui": ["libs/shared-ui/src/index.ts"]
    }
  }
}
